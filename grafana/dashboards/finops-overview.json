        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 0.01},
              {"color": "green", "value": 0.05}
            ]
          },
          "unit": "kgco2eq"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
