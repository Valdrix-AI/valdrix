        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}
      },
      "targets": [
        {"expr": "sum(valdrics_zombie_potential_savings_usd)", "legendFormat": "Potential Savings"}
      ],
      "title": "Total Potential Savings",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "blue", "value": null}]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
      "id": 2,
      "options": {"colorMode": "value", "graphMode": "area"},
      "targets": [
        {"expr": "sum(valdrics_zombies_detected_total)", "legendFormat": "Zombies Found"}
