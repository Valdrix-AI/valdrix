# ==============================================
# Valdrix Production Environment Variables
# ==============================================

# Core Application
APP_NAME=Valdrix
DEBUG=False
VERSION=0.1.0
ENVIRONMENT=production
WEB_CONCURRENCY=1

# Database (Supabase Transaction Pooler - Port 6543)
# Format: postgresql://[user]:[password]@[host]:6543/[db]
DATABASE_URL=postgresql://postgres.xxx:pass@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Authentication (Supabase Auth)
# Get from Supabase Project Settings > API > JWT Settings
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Security (Critical)
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-base64-or-hex-key
# Generate: openssl rand -base64 32 (must decode to exactly 32 bytes)
KDF_SALT=your-base64-32-byte-salt
# Generate: openssl rand -hex 32
CSRF_SECRET_KEY=your-secure-csrf-key
# Generate: openssl rand -hex 16
ADMIN_API_KEY=your-secure-admin-key
# Allowed Frontend Origins (JSON list)
CORS_ORIGINS=["https://valdrix.vercel.app","https://app.valdrix.ai"]

# LLM Provider Configuration
# Options: groq, google, openai, anthropic
LLM_PROVIDER=groq

# 1. Groq (Recommended for Speed/Cost)
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3-8b-8192

# 2. Google Gemini
GOOGLE_API_KEY=AIza...
GOOGLE_MODEL=gemini-1.5-flash

# 3. OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# 4. Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-3-5-sonnet-20240620

# Notification Services (Optional)
# Slack Bot Token (xoxb-...)
SLACK_BOT_TOKEN=
# Slack Channel ID for alerts
SLACK_CHANNEL_ID=
# Keep strict integration mode enabled in production SaaS environments.
SAAS_STRICT_INTEGRATIONS=true
# SMTP Settings (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@valdrix.ai
SMTP_PASSWORD=app-specific-password

# Redis Cache (Production)
# Local: redis://localhost:6379
# Upstash: redis://default:xxx@xxx.upstash.io:6379
REDIS_URL=

# Paystack Billing (Nigeria Support)
# Get from https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=sk_live_...
PAYSTACK_PUBLIC_KEY=pk_live_...
# Plan Codes from Paystack Dashboard > Plans
PAYSTACK_PLAN_STARTER=
PAYSTACK_PLAN_GROWTH=
PAYSTACK_PLAN_PRO=
PAYSTACK_PLAN_ENTERPRISE=

# Error tracking (Optional)
# If configured, sentry-sdk must be present in the deployed image.
SENTRY_DSN=

# Forecasting dependency break-glass (leave disabled by default)
FORECASTER_ALLOW_HOLT_WINTERS_FALLBACK=false
FORECASTER_BREAK_GLASS_REASON=
# ISO-8601 UTC timestamp, e.g. 2026-02-22T10:00:00Z
FORECASTER_BREAK_GLASS_EXPIRES_AT=

# Circuit Breaker Safety Limits
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_SECONDS=300
CIRCUIT_BREAKER_MAX_DAILY_SAVINGS=1000.0

# Database SSL (Production)
DB_SSL_MODE=verify-full
DB_SSL_CA_CERT_PATH=/path/to/supabase-ca.pem
